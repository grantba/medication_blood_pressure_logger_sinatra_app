<form method="post" action="/physicians/<%= @physician.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<p><label for="name">Physician Name: </label><input type="text" name="name" value="<%= @physician.name %>"></p>
<p><label for="address">Office Address: </label><input type="text" name="address" value= "<%= @physician.address %>"></p>
<% if !@physician.phone_number.blank? %>
<p><label for="phone_number">Office Phone Number: </label><input type="tel" name="phone_number" value="<%= @physician.phone_number %>"></p>
<% else %>
<p><label for="phone_number">Office Phone Number: </label><input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone_number" placeholder="123-456-7890"></p>
<% end %>
<p><label for="website">Website: </label><input type="text" name="website" value="<%= @physician.website %>"></p>
<p><label for="notes">Notes: </label><textarea label="notes" name="notes" value="<%= @physician.notes %>"></textarea></p> 
<input type="submit" value="Submit Changes">
<input type="reset">
</form>
