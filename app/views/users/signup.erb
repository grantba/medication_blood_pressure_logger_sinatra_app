<form method="post" action="/signup">
<p><label for="name">Name: </label><input type="text" name="name" placeholder="*required"></p>
<p><label for="username">Username: </label><input type="text" name="username" placeholder="*required"></p>
<p><label for="password">Password: </label><input type="password" name="password" placeholder="*required"></p>
<p><label for="email">Email Address: </label><input type="email" name="email"></p>
<p><label for="date_of_birth">Date of Birth: </label><input type="date" name="date_of_birth"></p>
<p><label for="address">Address: </label><input type="text" name="address"></p>
<p><label for="phone_number">Phone Number: </label><input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone_number" placeholder="123-456-7890"></p>
<input type="submit" value="Sign Up">
<input type="reset">
</form>