<form method="post" action="/signup">
<p>Name: <input type="text" name="name" placeholder="*required"></p>
<p>Username: <input type="text" name="username" placeholder="*required"></p>
<p>Password: <input type="password" name="password" placeholder="*required"></p>
<p>Email Address: <input type="email" name="email"></p>
<p>Date of Birth: <input type="date" name="date_of_birth"></p>
<p>Address: <input type="text" name="address"></p>
<p>Phone Number: <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone_number" placeholder="123-456-7890"></p>
<input type="submit" value="Sign Up">
<input type="reset">
</form>