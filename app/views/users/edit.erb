<form action="/users/<%= @user.username %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
<p><label for="name">Name: </label><input type="text" name="name" value="<%= @user.name %>"></p>
<p><label for="username">Username: </label><input type="text" name="username" value="<%= @user.username %>"></p>
<p><label for="password">Password: </label><input type="password" name="password"</p>
<p> ***Complete password portion to change your current password. Leave blank otherwise.***</p>
<p><label for="email">Email Address: </label><input type="email" name="email" value="<%= @user.email %>"></p>
<p><label for="date_of_birth">Date of Birth: </label><input type="date" name="date_of_birth" value="<%= @user.date_of_birth %>"></p>
<p><label for="address">Address: </label><input type="text" name="address" value="<%= @user.address %>"></p>
<% if !@user.phone_number.blank? %>
<p><label for="phone_number">Phone Number: </label><input type="tel" name="phone_number" value="<%= @user.phone_number %>"></p>
<% else %>
<p><label for="phone_number">Phone Number: </label><input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone_number" placeholder="123-456-7890"></p>
<% end %>
<input type="submit" value="Update my Information">
</form>