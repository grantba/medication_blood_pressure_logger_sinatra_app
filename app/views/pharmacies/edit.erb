<form method="post" action="/pharmacies/<%= @pharmacy.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<p><label for="name">Pharmacy Name: </label><input type="text" name="name" value="<%= @pharmacy.name %>"></p>
<p><label for="address">Pharmacy Address: </label><input type="text" name="address" value= "<%= @pharmacy.address %>"></p>
<% if !@pharmacy.phone_number.blank? %>
<p><label for="phone_number">Pharmacy Phone Number: </label><input type="tel" name="phone_number" value="<%= @pharmacy.phone_number %>"></p>
<% else %>
<p><label for="phone_number">Pharmacy Phone Number: </label><input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="phone_number" placeholder="123-456-7890"></p>
<% end %>
<p><label for="website">Website: </label><input type="text" name="website" value="<%= @pharmacy.website %>"></p>
<p><label for="notes">Notes: </label><textarea label="notes" name="notes" value="<%= @pharmacy.notes %>"><%= @pharmacy.notes %></textarea></p> 
<input type="submit" value="Submit Changes">
<input type="reset">
</form>
